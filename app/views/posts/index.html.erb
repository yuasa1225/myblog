<h2>
<%= link_to "Add New", new_post_path, class: "header-menu"%>
My posts
</h2>
<ul>
<% @posts.each do |post|%>
<li>
<%= link_to post.title, post_path(post.id)%>
<%= link_to "[Edit]", edit_post_path(post), class: "command"%>
<%= link_to "[x]", 
    post_path(post), 
    method: :delete, 
    class: "command",
    data: {confirm: "Sure?"}%>
</li>
<% end %>
</ul>